<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CustomlayoutMelle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HomeBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Mellename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#FFFF"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="Pan"
        android:textAllCaps="true"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/melleimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Mellename"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/grenade" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Mellename"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/melleimage"
        android:gravity="center">

        <TextView
            android:id="@+id/MelleDamage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amaranth"
            android:text="Damage:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/MelleDamagedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/MelleDamage"
            android:fontFamily="@font/almendra_sc"
            android:text="1.30 sec"
            android:textAllCaps="false"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Headshot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/MelleDamagedetail"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amaranth"
            android:text="Head Shot Damage:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Headshotdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="37dp"
            android:layout_toRightOf="@+id/Headshot"
            android:fontFamily="@font/almendra_sc"
            android:text="1"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>