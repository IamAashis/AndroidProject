<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Customlayoutequipments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HomeBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/EquipmentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#FFFF"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="Level 1 Vest"
        android:textAllCaps="true"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/Equipmentimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/EquipmentName"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFF"
        android:src="@mipmap/helmthree" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EquipmentName"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/Equipmentimage">

        <TextView
            android:id="@+id/EquipmenCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amaranth"
            android:text="Capacity Extension:"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/EquipmenCapacityDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/EquipmenCapacity"
            android:fontFamily="@font/almendra_sc"
            android:text="170"
            android:textAllCaps="false"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/EquipmenDamgeReduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/EquipmenCapacityDetail"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/amaranth"
            android:text="Damage Reduction:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/EquipmenDamgeReductiondetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/EquipmenDamgeReduction"
            android:fontFamily="@font/almendra_sc"
            android:text="1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/EquipmenDurability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/EquipmenDamgeReduction"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/amaranth"
            android:text="Durability:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/EquipmenDurabilitydetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@id/EquipmenDurability"
            android:fontFamily="@font/almendra_sc"
            android:text="1"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>